<!doctype html>
<html lang='en'>
  <head>
    <meta charset='utf-8'>
    <meta http-equiv='x-ua-compatible' content='ie=edge'>
    <title>Twitch Streamer Status</title>
    <meta name='description' content='View the status of your favorite Twitch.tv streamers.'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <!-- Font Awesome -->
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css'>
    <link rel='stylesheet' href='content/normalize.css'>
    <link rel='stylesheet' href='content/main.css'>
  </head>
  <body ng-app='app'>

    <!--[if lt IE 8]>
      <p class='browserupgrade'>You are using an <strong>outdated</strong> browser. Please <a href='http://browsehappy.com/'>upgrade your browser</a> to improve your experience.</p>
    <![endif]-->

    <!-- The app container. -->
    <div ng-controller='StatusController'>
      <!-- Controls. -->
      <header>
        <!-- Search options. -->
        <form>
          <!-- Search Bar -->
          <div class='searchBar'>
            <input type='search' ng-model='search.name'>
          </div>
          <!-- All | Online | Offline -->
          <div class='optionsBar'>
            <label><input type='radio' class='visuallyhidden' ng-model='search.filter' value='all'>All</label>
            <label><input type='radio' class='visuallyhidden' ng-model='search.filter' value='online'>Online</label>
            <label><input type='radio' class='visuallyhidden' ng-model='search.filter' value='offline'>Offline</label>
          </div>
        </form>
        <!-- Remove. -->
        <div ng-repeat='streamer in streamers'>
          <button ng-click='removeStreamer(streamer)'><i class='fa fa-times-circle-o'></i></button><span>{{streamer.name}}</span>
        </div>
        <!-- Add. -->
        <form>
          <button ng-click='addStreamer()'><i class='fa fa-plus-square'></i></button><input ng-model='newStreamer' type='text'>
        </form>
      </header>
      <!-- Main content. -->
      <main>
        <!-- Title. -->
        <h1>
          Tracked Streamers
        </h1>
        <!-- Streamers. -->
        <div class='streamer' ng-repeat='streamer in streamers' ng-show='matchesSearch(streamer)'>
          <!-- Top. -->
          <div>
            <!-- Left. -->
            <div>
              <!-- Logo and display name. -->
              <h2>{{streamer.displayName}}</h2>
              <!-- Status. -->
              <!-- Online state. -->
            </div>
            <!-- Right. -->
            <div>
              <!-- Video banner or preview. -->
              <!-- Game(?). -->
              <!-- Viewers(?). -->
            </div>
          </div>
          <!-- Bottom. -->
          <div>
            <!-- Title. -->
            <h3>Recorded Videos</h3>
            <!-- Scroller. -->
            <div class='scroller'>
              <!-- Navigate left button. -->
              <button>&lt;</button>
              <!-- Contents. -->
              <div>
                <!-- Navigable container. -->
                <div>
                  <!-- Recorded videos. -->
                  <div class='video' ng-repeat='video in streamer.videos'>
                    <!-- Title. -->
                    <h4>{{video.title}}</h4>
                    <!-- Preview and overlay with title, description, duration, and age. -->
                    <div>

                    </div>
                  </div>
                </div>
              </div>
              <!-- Navigate right button. -->
              <button>&gt;</button>
            </div>
          </div>
          <!-- Expand/Collapse button. -->
          <button>v</button>
        </div>
      </main>
    </div>

    <script src='vendor/angular.min.js'></script>
    <script src='vendor/angular-cookies.min.js'></script>
    <script src='app.min.js'></script>
  </body>
</html>
